<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <cn.lyy.findyou.widget.navigationview.CustomNavigationView
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:custom_navigation_view_center_tv="@string/app_name"
        app:custom_navigation_view_type="7" />

    <EditText
        android:id="@+id/et_user_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_nav"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"/>

    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_user_account"
        android:ems="10"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_user_name"
        android:ems="10"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_user_nick_name"
        android:ems="10"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/et_user_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_user_password"
        android:ems="10"
        android:inputType="phone"/>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_user_password_confirm"
        android:text="提交"/>
</RelativeLayout>
